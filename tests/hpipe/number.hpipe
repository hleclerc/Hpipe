read_dec[ num = "num" ] =
    ( digit { num =            *data - '0'; } )
    ( digit { num = 10 * num + *data - '0'; } )**

number_hex = '0x'
    ( digit { num =            *data - '0'; } ) | ( 'A' .. 'F' { num =            *data - 'A'; } ) | ( 'a' .. 'f' { num =            *data - 'a'; } )
    ( digit { num = 16 * num + *data - '0'; } ) | ( 'A' .. 'F' { num = 16 * num + *data - 'A'; } ) | ( 'a' .. 'f' { num = 16 * num + *data - 'a'; } )**
    { os << num << " "; }

number_flt =
    read_dec[ "nfl" ]
    '.' { mul = 1; } ( digit { nfl += ( mul *= 0.1 ) * ( *data - '0' );  } )**
    ( 'e' | 'E'
        ( '+'? read_dec[ "num" ] { nfl *= std::pow( 10.0,  num ); } ) |
        ( '-'  read_dec[ "num" ] { nfl *= std::pow( 10.0, -num ); } )
    )??
    { os << nfl << " "; }

number_dec =
    read_dec[ "num" ]
    { os << num << " "; }

main =
    add_include[ "Hpipe/TypeConfig.h" ]
    add_include[ "cmath" ]
    (
        ( eof -> out ) |
        number_hex |
        number_flt |
        number_dec |
        any
    )** <- out


beg_methods
    Hpipe::SI64 num;
    double nfl, mul;
end_methods

beg_test preproc
    input
        17 + 2.78e17 * 0x42 - 2.78e-17
    output
        17 2.78e+17 66 2.78e-17  status=OK
end_test
